<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!---<include file="example.xml"/>-->
    <!-- Configuration for the default package. -->
    <!--<constant name="struts.action.excludePattern" value="/LoginServlet*,/Logout*"/>-->
    
    <package name="default" extends="struts-default">
        <action name="login" class="com.exavalu.ers.actions.UserAction" method="execute">
            <result name="ADMIN">/adminIndex.jsp</result>
            <result name="CUSTOMER">/customerIndex.jsp</result>
            <result name="LOGIN">/login.jsp</result>
        </action> 
        <action name="logout" class="com.exavalu.ers.actions.UserAction" method="logout">
            <result name="LOGOUT">/login.jsp</result>
            
        </action> 
        
        <action name="productAdmin" class="com.exavalu.ers.actions.ProductAction" method="productReport">
            <result name="REPORTPRODUCT">/adminProducts.jsp</result>
            <result name="LOGIN">/login.jsp</result>
        </action>
        
         <action name="report" class="com.exavalu.ers.actions.OrderAction" method="orderReport">
            <result name="ORDERREPORT">/adminOrders.jsp</result>
           
        </action>

        <action name="updateOrderdetails" class="com.exavalu.ers.actions.OrderAction" method="orderUpdate">
            <result name="UPDATE">/orderUpdate.jsp</result>
        </action>
        
         <action name="deleterecord" class="com.exavalu.ers.actions.OrderAction" method="orderDelete">
            <result name="DELETEORDER">/adminOrderDelete.jsp</result>
        </action>
        
        
         <action name="customerOrderReport" class="com.exavalu.ers.actions.OrderAction" method="CustomerOrderReport">
            <result name="CUSTOMERORDERREPORT">/customerIndex.jsp</result>
           
        </action>
        
       
        
    </package>
</struts>
